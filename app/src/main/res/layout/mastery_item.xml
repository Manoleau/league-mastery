<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/championView"
    android:layout_width="match_parent"
    android:layout_height="35pt"
    android:orientation="horizontal"
    android:clipToPadding="false"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10sp">

        <ImageView
            android:id="@+id/championIconImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_champion_black"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/championNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ggez"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10sp">

        <ImageView
            android:id="@+id/championLevelImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_champion_black"
            />

        <TextView
            android:id="@+id/championPointsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ggez"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10sp">

        <ImageView
            android:id="@+id/chestGrantedImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_champion_black" />

        <TextView
            android:id="@+id/chestGrantedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ggez"/>
    </LinearLayout>



    </LinearLayout>
